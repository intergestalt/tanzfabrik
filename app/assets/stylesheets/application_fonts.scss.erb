/**** font declarations ****/

@font-face {
    font-family: 'LuxiMonoBold';
    src: url('<%= asset_path("luximb.eot") %>');
    src: url('<%= asset_path("luximb.eot") %>') format('embedded-opentype'),
         url('<%= asset_path("luximb.woff") %>') format('woff'),
         url('<%= asset_path("luximb.ttf") %>') format('truetype'),
         url('<%= asset_path("luximb.svg#LuxiMonoBold") %>') format('svg');
}

@font-face {
    font-family: 'LuxiMonoRegular';
    src: url('<%= asset_path("luximr.eot") %>');
    src: url('<%= asset_path("luximr.eot") %>') format('embedded-opentype'),
         url('<%= asset_path("luximr.woff") %>') format('woff'),
         url('<%= asset_path("luximr.ttf") %>') format('truetype'),
         url('<%= asset_path("luximr.svg#LuxiMonoRegular") %>') format('svg');
}


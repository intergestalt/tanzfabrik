render "/pages/editable_content"

# get festivals now and in the future
festivals = Festival.select { |f| f.events.length > 0 && f.end_date >= Date.today - 2.week }

ul :class => "festivals" do

  festivals.each do |festival|

    li do
      a festival.name, :href => festival_path(festival)
    end
  end
end


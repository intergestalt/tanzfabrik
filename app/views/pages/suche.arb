if I18n.locale == :de
  page_title = "Suchergebnisse"
else
  page_title = "Search results"
end
set_meta_tags :title => page_title, :reverse => false

results = search(params[:q])

form :class=>"search-form" do
  input :type=>"text", :name=>"q"
  input :type=>"submit", :value=>"Suchen"
end

if results.length > 0

  header :id => "headlines" do
    div :class => "main" do
      div :class => "line1" do
        h1 :class => "title" do
          t(:search_results)
        end
      end
    end
  end

  div :class => "row search" do
    div :class => "basic results" do
      b "Pages"
      ol do
        results[:pages].each do |page|
          li link_to page.title, page_path(page)
        end
      end
      b "People"
      ol do
        results[:people].each do |person|
          link = person_link(person)
          if(link)
            li link_to person.name, link
          end
        end
      end
      b "Events"
      ol do
        results[:events].each do |event|
          link = event_link(event)
          if(link)
            li link_to (event.title + " (" + event.type.name + ")"), link
          end
        end
      end
      b "Festivals"
      ol do
        results[:festivals].each do |festival|
          li link_to festival.name, festival_path(festival)
        end
      end
    end
  end
  
end
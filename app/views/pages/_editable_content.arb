if page
	header :id => "headlines", :class => "headlines-teachers" do
	  div :class => "before"
	  div :class => "main" do
	    div :class => "line1" do
	      h1 :class => "title" do
	        text_node editable page, :title
	      end
	    end
	  end
	end

  div :class => "row page" do
    div :class => "basic" do
      div editable(page, :content, :type => "wysihtml5"), :class => "description"
    end
    if page.images.length > 0 
      div :class => "details" do
        div :class => "image-container" do
          img :src => page.images.first.attachment.url(:medium_detail_column), :title => page.images.first.description, :alt => page.images.first.description
          small page.images.first.license, :class => "image-license"
        end
      end
    else
      div :class => "details empty", "data-variant" => page.title.length % 2
    end
  end

end	


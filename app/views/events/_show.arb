show_festival = nil if !defined? show_festival

if show_festival 
  header :id => "headlines", :class => "headlines-event" do
    div :class => "before" do
      a "<", :class => "previous" if event.type.name == "Performance-Projekt"
    end
    div :class => "main" do
      div :class => "line1" do
        h1 event.type.name, :class => "title"
        if event.type.name == "Workshop"
          a "> Online-Anmeldung", :class => "registration"
        else
          a ">", :class => "next"
        end
      end
    end
  end
end

div :class => "row event" do
  div :class => "basic" do 
    div :class => "content" do
      
      render :partial => "events/basic_info", :locals => {:event => event, :show_festival => show_festival}

      div editable event, :description, :type => "wysihtml5"
      
      div :class => "admin-only admin-nav" do
        a "> Dieses Event bearbeiten", :href => edit_admin_event_path(event) if admin_user_signed_in?
      end

    end
  end

  div :class => "details" do
    div :class => "content" do
      if event.images.length > 0
        div :class => "image-container" do
          img :src => event.images.first.attachment.url
        end
      end


      ul :class => "time-place" do
        event.all_studios.each do |studio|
          li do
            #time l occurrence, :format => :day
            #time l event.firsttime(studio)
            div :class => "time-duration" do
              time l event.event_details.first.starttime, :format => :day
              span " - "
              time l event.event_details.last.endtime, :format => :day
            end
            span :class => "place" do
              a (studio.location.name + " " + studio.name), :href => url_for(:controller => 'pages', :action => 'show', :id => 'studios')
            end
          end
        end  
      end
    
      small editable event, :info, :type => "wysihtml5"

    end    
  end
end
show_festival = nil if !defined? show_festival

if show_festival 
  header :id => "headlines", :class => "headlines-event" do
    if event.type.name == "Performance-Projekt"
      div :class => "before" do
        a "<", :class => "previous"
      end
    end
    div :class => "main" do
      div :class => "line1" do
        h1 event.type.name, :class => "title"
        if event.type.name == "Workshop"
          a "> Online-Anmeldung", :class => "registration"
        else
          a ">", :class => "next"
        end
      end
    end
  end
end

div :class => "row event" do
  div :class => "basic" do 
    div :class => "content" do
      
      render :partial => "events/basic_info", :locals => {:event => event, :show_festival => show_festival}

      para do
        event.description #unless event.description.empty?
      end
    end
  end

  div :class => "details" do
    div :class => "content" do
      img :src => event.images.first.attachment.url if event.images.length > 0 

      event.event_details.each do |detail|
        ul :class => "time-place" do
          detail.occurrences.each do |occurrence|
            li do
              time l occurrence, :format => :default
              span :class => "place" do
                a (detail.studio.location.name + " " + detail.studio.name), :href => url_for(:controller => 'pages', :action => 'show', :id => 'studios')
              end
            end
          end  
        end
      end
    end    
  end
end
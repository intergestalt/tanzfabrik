show_festival = nil if !defined? show_festival

h2 event.title, :class => "title"

if event.type.name != "Performance-Projekt" && event.type.name != "Workshop"
  para event.display_type, :class => "type"
end

para :class => "teacher" do
  event.people.map { |p| (person_link(p) ? link_to(p.name, person_link(p)) : p.name ) }.join(', ').html_safe
end
para do
  if event.festivals.length > 0 && show_festival
    text_node "Teil von "
    span event.festivals.map { |f| (link_to f.name, festival_path(f)) }.join(', ').html_safe
  end
end

div editable event, :description, :type => "wysihtml5"

if event.type.id == 2 #workshop
  event.people.each do |person|
    div person.bio.html_safe
  end
end

